<div class="container" style="margin-top: 70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Actualizar Detalle de Orden</h3>

        <form action="/update/{{order._id}}" method="POST"> 
            <div class="mb-3">
                <label for="order_date" class="form-label">Fecha de Orden</label>
                <input type="date" class="form-control" id="order_date" name="order_date" value="{{order.order_date}}" >
            </div>

            <div class="mb-3">
                <label for="total" class="form-label">Total</label>
                <input type="number" class="form-control" id="total" name="total" step="0.01" value="{{order.total}}" disabled>
            </div>

            <div class="mb-3">
                <label for="invoice_report_url" class="form-label">URL del Informe de Factura</label>
                <input type="text" class="form-control" id="invoice_report_url" name="invoice_report_url" value="{{order.invoice_report_url}}" disabled>
            </div>

            <div class="mb-3">
                <label for="status" class="form-label">Estado</label>
                <select class="form-select" id="status" name="status" required>
                    <option value="pending" >Pendiente</option>
                    <option value="completed" >Completado</option>
                    <option value="canceled" >Cancelado</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Actualizar Detalle</button>
            <a href="/ruta-de-regreso" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
