<div class="container" style="margin-top: 70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Órdenes de Venta y Detalles</h3>

        <!-- Botón Agregar -->
        <div class="text-end mb-3">
            <a href="/form" class="btn btn-success">Agregar</a>
        </div>

        {{#if data}}
        <table class="table table-striped table-hover text-center align-middle">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-2">Cantidad</th>
                    <th scope="col" class="col-3">Precio</th>
                    <th scope="col" class="col-3">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{quantity}}</td>
                    <td>${{price}}</td>
                    <td>
                        <a href="/form/{{_id}}"  class="btn btn-warning btn-sm" type="button" title="Editar">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="/detalle/{{_id}}" class="btn btn-danger btn-sm" type="button" title="Eliminar">
                            <i class="fas fa-trash"></i>
                        <a/>
                        <button class="btn btn-info btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#detalles-{{@index}}" aria-expanded="false" aria-controls="detalles-{{@index}}" title="Ver Detalles">
                            <i class="fas fa-plus"></i>
                        </button>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <div class="collapse" id="detalles-{{@index}}">
                            <div class="card card-body">
                                <table class="table table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">Fecha</th>
                                            <th scope="col">Total</th>
                                            <th scope="col">Estado</th>
                                            <th scope="col">PDF</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>{{this.orden.order_date}}</td>
                                            <td>${{this.orden.total}}</td>
                                            <td>{{this.orden.status}}</td>
                                            <td>
                                                <a href="{{this.orden.invoice_report_url}}" target="_blank" title="Ver PDF">
                                                    <i class="fas fa-file-pdf"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table table-bordered mt-2">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">Nombre del Plato</th>
                                            <th scope="col">Descripción</th>
                                            <th scope="col">Precio</th>
                                            <th scope="col">Stock</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>{{this.dish.name}}</td>
                                            <td>{{this.dish.description}}</td>
                                            <td>${{this.dish.price}}</td>
                                            <td>{{this.dish.stock}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="3">ÓRDENES Y DETALLES DE VENTA</td>
                </tr>
            </tfoot>
        </table>
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>No hay órdenes registradas</h3>
            </div>
            <div class="card-body">
                <p>Presiona este botón para registrar una nueva orden.</p>
                <a href="/form" class="btn btn-primary">Crear Orden</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!-- Enlace a Font Awesome para los iconos -->
